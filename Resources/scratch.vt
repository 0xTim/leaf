@include("path/to/header")

<h1>Welcome, @(name)</h1>

@if(best-friend) {
    <h3>Best friend: @(best-friend)</h3>
} @@else() {
    <h3>Best friend pending!<\h3>
}

Your entire friend group is

@loop(friends, "friend") {
    <li><b>@(friend.name)</b>: @(friend.name)</li>
}


@forEach(friends, "friend") {
    <li><b>@(friend.name)</b>: @(friend.age)</li>
    @forEach(friend.hobbies, "hobbie") {
        @(friend.name) enjoys @(hobbie)
    }
}
